{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "app/**/*.ts"  // Includes all .ts files in the app folder and its subdirectories
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
